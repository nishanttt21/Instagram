<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.instagram.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.instagram.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.instagram.ui.photo.PhotoFragment"
        android:label="PhotoFragment"
        tools:layout="@layout/fragment_photo" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.instagram.ui.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/myActivityFragment"
        android:name="com.example.instagram.ui.myactivity.MyActivityFragment"
        android:label="MyActivityFragment" />
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.instagram.ui.home.postdetail.PostDetailFragment"
        android:label="PostDetailFragment" >
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/profileDetailFragment"
        android:name="com.example.instagram.ui.home.profiledetail.ProfileDetailFragment"
        android:label="ProfileDetailFragment" />
</navigation>